---
import he from 'he';
const { ImageUrl, Label, slug, activeSlug } = Astro.props;

const api_URL = import.meta.env.PUBLIC_ApiUrl;
---

<a
  href={slug}
  class={`flex px-[8px] py-[6px] rounded-xl ${activeSlug || "hover:bg-[#E9F6FF] group"} space-x-3 items-center`}
>
  <div
    class=`p-2 rounded-full group-hover:bg-white flex-shrink-0  ${activeSlug || "bg-[#E9F6FF]"}`
  >
    <img class="mx-auto h-5 w-5" src=`${api_URL}${ImageUrl}` alt="link-icon" />
  </div>

  <p class="font-medium text-[16px] xl:leading-7">{he.decode(Label)}</p>
</a>

<style>
  .activeClass {
    background-color: #e9f6ff;
  }

  .activeClass div {
    background-color: white;
  }
</style>
